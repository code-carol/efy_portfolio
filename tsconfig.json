{
  "compilerOptions": {
    "target": "es2020", // Use ES2020 features like BigInt, dynamic import, etc.
    "module": "es2020", // Emit ES2020 module syntax (import/export)
    "strict": true, // Enable strict type checking
    "outDir": "./dist", // Output directory for compiled files
    "rootDir": "./src", // Source directory for TypeScript files
    "moduleResolution": "node", // Resolve modules like Node.js
    "esModuleInterop": true, // Ensure compatibility with CommonJS
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true // Skip type checking of declaration files
  },
  "include": ["src/**/*", "dist/main.js"],
  "exclude": ["node_modules", "dist"]
}
